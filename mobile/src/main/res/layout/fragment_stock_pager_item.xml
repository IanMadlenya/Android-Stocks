<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<import type="com.example.StocksConfig" />
		<variable
			name="view" type="com.example.ui.StockPagerView" />
		<variable
			name="data" type="com.example.viewmodel.StockPagerItemViewModel" />
	</data>

	<ImageView
		android:id="@+id/fragment_stock_pager_item_chart"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter"
		app:imageUrl="@{data.chartUrl}" />

</layout>
