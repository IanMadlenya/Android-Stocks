<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<variable
			name="view" type="com.example.architecture.StockDetailArchView" />
		<variable
			name="viewModel" type="com.example.architecture.StockDetailArchViewModel" />
	</data>

	<org.alfonz.view.StatefulLayout
		android:id="@+id/fragment_stock_detail_arch_stateful_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animateLayoutChanges="true"
		app:progressLayout="@layout/placeholder_progress"
		app:offlineLayout="@layout/placeholder_offline"
		app:emptyLayout="@layout/placeholder_empty"
		app:state="@{viewModel.state}">

		<ScrollView
			android:id="@+id/container_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true"
			android:background="@color/global_bg_front">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/global_keyline_16"
				android:orientation="vertical">

				<TextView
					android:id="@+id/fragment_stock_detail_arch_symbol"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/TextAppearance.Stocks.Body1"
					android:text="@{@string/fragment_stock_detail_symbol(viewModel.quote.symbol)}"
					android:onClick="@{view::onClick}"
					tools:text="INTC" />

				<TextView
					android:id="@+id/fragment_stock_detail_arch_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/TextAppearance.Stocks.Body1"
					android:text="@{@string/fragment_stock_detail_name(viewModel.quote.name)}"
					android:onClick="@{view::onClick}"
					tools:text="Intel" />

				<TextView
					android:id="@+id/fragment_stock_detail_arch_last_price"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/TextAppearance.Stocks.Body1"
					android:text="@{@string/fragment_stock_detail_price(viewModel.quote.lastPrice)}"
					android:onClick="@{view::onClick}"
					tools:text="$30.5" />

				<TextView
					android:id="@+id/fragment_stock_detail_arch_last_change"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/TextAppearance.Stocks.Body1"
					android:text="@{@string/fragment_stock_detail_change(viewModel.quote.changePercent)}"
					android:onClick="@{view::onClick}"
					tools:text="0.5%" />

				<TextView
					android:id="@+id/fragment_stock_detail_arch_last_capitalization"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="@style/TextAppearance.Stocks.Body1"
					android:text="@{@string/fragment_stock_detail_capitalization(viewModel.quote.marketCap)}"
					android:onClick="@{view::onClick}"
					tools:text="$2000000" />

				<ImageView
					android:id="@+id/fragment_stock_detail_arch_chart"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:scaleType="fitCenter"
					app:imageUrl="@{viewModel.chartUrl}" />

			</LinearLayout>

		</ScrollView>
	</org.alfonz.view.StatefulLayout>

</layout>
